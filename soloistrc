node_attributes:
  sprout:
    rubymine:
      preferences:
        dir: <%= "#{ENV['HOME']}/Library/Preferences/RubyMine60" %>
  terminal:
    color_scheme: <%= ENV['TERMINAL_SCHEME'] || 'Basic' %>
  bash_it:
    theme: minimal
    custom_plugins:
      ml-workstation:
        - bash_profile-mavenlink.bash
  function_keys:
    use_function_keys_as_function_keys: 1
  git_projects:
    -
      - sprout-wrap
      - git@github.com:mavenlink-cookbooks/sprout-wrap.git
    -
      - mavenlink
      - git@github.com:mavenlink/mavenlink.git
    -
      - mobile
      - git@github.com:mavenlink/mobile.git
    -
      - marketing
      - git@github.com:mavenlink/marketing.git
    -
      - mavenlink-js
      - git@github.com:mavenlink/mavenlink-js.git
    -
      - brainstem-js
      - git@github.com:mavenlink/brainstem-js.git
    -
      - brainstem
      - git@github.com:mavenlink/brainstem.git
  hipchat_download_uri: http://downloads.hipchat.com.s3.amazonaws.com/mac-beta/HipChat-0.29-01uennzomg01wmg.zip
  hipchat_app_path: /Applications/HipChat.app
  imageoptim_download_uri: http://imageoptim.com/ImageOptim.tbz2
  imageoptim_app_path: /Applications/ImageOptim.app
  nginx_settings:
